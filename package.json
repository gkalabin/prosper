{
  "name": "prosper",
  "version": "1.0.0",
  "description": "A spending tracker to help you prosper",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "fmt": "prettier --write .",
    "lint:fmt": "prettier --check .",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx . --max-warnings=0",
    "lint:ts": "tsc --noEmit",
    "lint:typos": "typos . # https://github.com/crate-ci/typos",
    "lint": "npm run lint:eslint && npm run lint:ts && npm run lint:fmt && npm run lint:typos",
    "prepare": "husky install",
    "e2e:db:up": "docker compose -f docker-compose.e2e.yml up -d --wait && dotenv -e .env.e2e -- npx prisma db push --skip-generate",
    "e2e:db:down": "docker compose -f docker-compose.e2e.yml down -v",
    "e2e:app:dev": "dotenv -e .env.e2e -- npm run dev",
    "test:e2e": "playwright test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}": [
      "prettier --check"
    ],
    "*.tf": [
      "terraform fmt -check"
    ],
    "*": [
      "typos",
      "gitleaks protect --no-banner --staged --verbose"
    ]
  },
  "keywords": [
    "expense tracking",
    "personal finance",
    "spending tracker"
  ],
  "author": "Gregory Kalabin",
  "license": "MIT",
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      }
    ]
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.9.0",
    "@prisma/client": "^5.19.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@types/echarts": "^4.9.22",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "antlr4": "^4.13.2",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^3.6.0",
    "echarts-for-react": "^3.0.2",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.53.0",
    "swr": "^2.3.8",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.2",
    "uuid": "^10.0.0",
    "yahoo-finance2": "^2.12.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.19.3",
    "@types/react": "^18.3.8",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  }
}
