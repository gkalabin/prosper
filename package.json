{
  "name": "prosper",
  "version": "1.0.0",
  "description": "A spending tracker to help you prosper",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "fmt": "prettier --write .",
    "lint:fmt": "prettier --check .",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx . --max-warnings=0",
    "lint:ts": "tsc --noEmit",
    "lint:typos": "typos . # https://github.com/crate-ci/typos",
    "lint": "npm run lint:eslint && npm run lint:ts && npm run lint:fmt && npm run lint:typos",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}": [
      "prettier --check"
    ],
    "*.tf": [
      "terraform fmt -check"
    ],
    "*": [
      "typos",
      "gitleaks protect --no-banner --staged --verbose"
    ]
  },
  "keywords": [
    "expense tracking",
    "personal finance",
    "spending tracker"
  ],
  "author": "Gregory Kalabin",
  "license": "MIT",
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@prisma/client": "^5.11.0",
    "@types/echarts": "^4.9.22",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "antlr4": "^4.13.1-patch-1",
    "bcrypt": "^5.1.1",
    "classnames": "^2.5.1",
    "date-fns": "^3.5.0",
    "echarts-for-react": "^3.0.2",
    "formik": "^2.4.5",
    "next": "^14.1.3",
    "next-auth": "^4.24.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-select": "^5.8.0",
    "swr": "^2.2.5",
    "uuid": "^9.0.1",
    "yahoo-finance2": "^2.10.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.66",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.36",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "prisma": "^5.11.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2"
  }
}
